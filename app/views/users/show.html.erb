<p>ログイン完了ユーザ: <%= current_user.name %></p>
<% if current_user == @user %> 
  <h1>タスク一覧</h1>
  
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.user.name, user_path(task.user) %> : <%= link_to task.id, task %> <%= task.status %> &gt; <%= task.content %>
      </li>
    <% end %>
  </ul>
    <li><%= link_to '新規タスクの作成', new_task_path %></li>
    <li><%= link_to 'ログアウト', logout_path, method: :delete %></li>
<% else %>
  <h1>新規登録</h1>
    <div>
      <%= link_to '新規登録', signup_path %>
      <%= link_to 'ログイン', login_path %>
    </div>
<% end %>