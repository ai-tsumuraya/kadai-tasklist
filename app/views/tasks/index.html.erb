<% if logged_in? %>
  <h1>タスク一覧</h1>
  
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
    <% end %>
  </ul>
  <%= link_to '新規タスクの作成', new_task_path %>
<% else %>
  <h1>新規登録</h1>
    <div>
      <%= link_to '新規登録', signup_path %>
    </div>
<% end %>
      